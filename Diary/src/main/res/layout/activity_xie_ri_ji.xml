<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wave="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingClass,NamespaceTypo">

    <!-- 动态波浪组件 -->
    <com.john.waveview.WaveView
        android:id="@+id/wave_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DFBAEF"
        wave:above_wave_color="@android:color/white"
        wave:blow_wave_color="@android:color/white"
        wave:progress="80"
        wave:wave_height="little"
        wave:wave_hz="normal"
        wave:wave_length="middle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 时间显示区域 -->
        <TextView
            android:id="@+id/current_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="XX月XX日 XX:XX"
            android:layout_gravity="start"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/qzwx_kaiti"/>

        <!-- 标题输入框 -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            wave:hintTextColor="#FF8F00">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/diary_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="日记标题"
                android:padding="8dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:background="#E2B3F6"
                android:fontFamily="@font/qzwx_shouxie"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!--心情，天气组件 -->
<!--        <com.xuexiang.xui.widget.button.shinebutton.ShineButton-->
<!--            android:id="@+id/shine_button"-->
<!--            android:layout_width="30dp"-->
<!--            android:layout_height="30dp"-->
<!--            android:layout_gravity="center"-->
<!--            wave:sb_checked_color="#f26d7d"-->
<!--            wave:sb_icon_image="@drawable/svg_rili"-->
<!--            wave:sb_normal_color="@android:color/darker_gray" />-->

        <com.xuexiang.xui.widget.button.shinebutton.ShineButton
            android:id="@+id/shine_button_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@android:color/darker_gray"
            wave:sb_allow_random_color="false"
            wave:sb_big_shine_color="#FF6666"
            wave:sb_checked_color="#FF6666"
            wave:sb_click_animation_duration="200"
            wave:sb_enable_flashing="false"
            wave:sb_icon_image="@drawable/svg_rili"
            wave:sb_normal_color="@android:color/darker_gray"
            wave:sb_shine_animation_duration="1500"
            wave:sb_shine_count="15"
            wave:sb_shine_distance_multiple="1.5"
            wave:sb_shine_turn_angle="10"
            wave:sb_small_shine_color="#CC9999"
            wave:sb_small_shine_offset_angle="20" />
        <!-- 其他布局内容 -->

    </LinearLayout>

</FrameLayout>
